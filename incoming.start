#!/bin/sh
#
# Shell script for running the jabber bot.  I'd rather use something like
# launchd, but that's unavailable to me on my servers.

exec > logs/incoming.$$.log
exec 2>&1

ulimit -v 100000
ulimit -m 100000

while :
do
	rsrc=""
	if [ $# -lt 1 ]
	then
		rsrc="incoming"
	else
		rsrc="outgoing.$$"
	fi
	ruby incoming.rb $rsrc "$@"
	sleep 5
done
